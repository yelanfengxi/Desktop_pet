{
  "name": "lan",
  "version": "1.0.0",
  "description": "Live2DPet - AI desktop pet application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourname.desktop_pet",
    "productName": "Desktop_pet",
    "win": {
      "target": "portable",
      "icon": "app-icon.png"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "package.json",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!node_modules/**/README*",
      "!node_modules/**/*.md",
      "!**/*.log",
      "!convert-icon.js",
      "!walkthrough.md",
      "!*.png",
      "!*.jpg",
      "!*.ico"
    ],
    "npmRebuild": false
  },
  "keywords": [
    "electron",
    "live2d",
    "pet",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.13.5",
    "pixi-live2d-display": "^0.4.0",
    "pixi.js": "^7.4.3"
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1"
  }
}